
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <a class="btn btn-warning" href="/student">Back</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-body">
                    <form class="update_form" action="/student/edit/<%= getSingleStudentData.id %>" method="post" enctype="multipart/form-data">
                        <h2>Update <%= getSingleStudentData.name %>-Data</h2>
                        <hr>
                        <div class="my-3">
                            <label for="">Name</label>
                            <input value="<%= getSingleStudentData.name %>" name="name" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Email</label>
                            <input value="<%= getSingleStudentData.email %>" name="email" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Cell</label>
                            <input value="<%= getSingleStudentData.cell %>" name="cell" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Gender</label>
                            <select name="gender" class="form-control">
                                <option>-Select-</option>
                                <option <% if (getSingleStudentData.gender == "Male") { %> selected <% } %> value="Male">Male</option>
                                <option <% if (getSingleStudentData.gender == "Female") { %> selected <% } %> value="Female">Female</option>
                            </select>
                        </div>
                        <div class="my-3">
                            <label for="">Upload Student-Photo</label>
                            <br>
                            <label for="student_photo_upload">
                                <img style="width: 90px; height: 90px; cursor: pointer; object-fit: cover;" src="https://t3.ftcdn.net/jpg/02/18/21/86/360_F_218218632_jF6XAkcrlBjv1mAg9Ow0UBMLBaJrhygH.jpg" alt="">
                            </label>
                            <img style="max-width: 100%;" id="preview_img" src="/studentImages/<%= getSingleStudentData.photo %>" alt="">
                            <input style="display: none;" id="student_photo_upload" name="student_photo_upload" type="file" class="form-control">
                        </div>
                        <div class="my-3">
                            <input type="submit" value="Update-Now" class="btn btn-sm btn-primary w-100">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>