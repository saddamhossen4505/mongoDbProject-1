


<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <a class="btn btn-sm btn-primary" href="#student_add_modal" data-bs-toggle="modal">Add New-Student</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-body">
                    <h2>All Student Data-Table</h2>
                    <hr>
                    <table class="table table_striped student_table">
                        <thead class="text-center">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Cell</th>
                                <th>Gender</th>
                                <th>Photo</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% getAllStudentData.reverse().forEach(data => { %>
                                <tr>
                                    <td>1</td>
                                    <td><%= data.name %> </td>
                                    <td><%= data.email %></td>
                                    <td><%= data.cell %></td>
                                    <td><%= data.gender %></td>
                                    <td>
                                        <img src="/studentImages/<%= data.photo %> " alt="">
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-info" href="/student/<%= data._id %> "><i class="fas fa-eye"></i></a>
                                        <a class="btn btn-sm btn-warning" href="/student/edit/<%= data._id %> "><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-sm btn-danger delete_btn" href="/student/delete/<%= data._id %>"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Student Add Modal start here -->
<div id="student_add_modal" class="modal fade">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <form id="student_add_form" action="/student" method="post" enctype="multipart/form-data">
                    <h2>Add New-Student</h2>
                    <hr>
                    <div class="my-3">
                        <label for="">Name</label>
                        <input name="name" type="text" class="form-control">
                    </div>
                    <div class="my-3">
                        <label for="">Email</label>
                        <input name="email" type="text" class="form-control">
                    </div>
                    <div class="my-3">
                        <label for="">Cell</label>
                        <input name="cell" type="text" class="form-control">
                    </div>
                    <div class="my-3">
                        <label for="">Gender</label>
                        <select name="gender" class="form-control">
                            <option>-Select-</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="my-3">
                        <label for="">Upload Student-Photo</label>
                        <br>
                        <label for="student_photo_upload">
                            <img src="https://t3.ftcdn.net/jpg/02/18/21/86/360_F_218218632_jF6XAkcrlBjv1mAg9Ow0UBMLBaJrhygH.jpg" alt="">
                        </label>
                        <img id="preview_img" src="" alt="">
                        <input id="student_photo_upload" name="student_photo_upload" type="file" class="form-control">
                    </div>
                    <div class="my-3">
                        <input type="submit" value="Add-Now" class="btn btn-sm btn-primary w-100">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Student Add Modal ends here -->